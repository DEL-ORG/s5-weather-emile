
pipeline {
    agent {
        label ("aws-deploy")
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '20'))
        disableConcurrentBuilds()
        timeout (time: 60, unit: 'MINUTES')
        timestamps()
    }
  
  // environment {
    //     DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    // }
    stages {
            stage('Hello') {
                steps {
                    sh '''
                    ls 
                    pwd
                    '''
